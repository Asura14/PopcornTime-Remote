<?xml version="1.0" encoding="utf-8"?>
<layout orientation="portrait">
	<row weight="2">
		<tabs color="#424242">

			<!-- Main Interface Control TAB -->
			<tab color="#1565C0" text="Main Interface">
				
				<!-- Category Switcher -->
				<row weight="1">
					<grid>
						<row>
							<button color="#c12643" text="Movies" ontap="switchvideosource,movies" />
							<button color="#c12643" text="TV Shows" ontap="switchvideosource,tv" />
							<button color="#c12643" text="Anime" ontap="switchvideosource,anime" />
						</row>
					</grid>
				</row>

				<row weight="2">
					<grid>
						<button icon="back" ontap="goback" />
						<button icon="search" ontap="search" />
						<button text="select\n (Play)" ontap="select"/>
					</grid>
				</row>

				<!-- Arrow Buttons -->
				<row weight="6">
					<grid weight="3">
						<row>
							<button icon="up" ontap="moveup" />
						</row>
						<row>
							<button icon="left" ontap="moveleft" />
							<button icon="right" ontap="moveright" />
						</row>
						<row>
							<button icon="down" ontap="movedown" />
						</row>
					</grid>
				</row>
			</tab>

			<!-- Video Player Control TAB -->
			<tab color="#7CB342" text="Video Player">
				<grid>
					<row weight="2">
						<button color="#c12643" icon="vmute" ontap="volumemute" />
						<button color="#c12643" icon="vdown" ontap="volumedown" />
						<button color="#c12643" icon="vup" ontap="volumeup"/>
					</row>

					<row weight="3">
						<button color="#c12643" icon="playpause" />
						<button color="#c12643" icon="fullscreen" ontap="togglefullscreen" />
					</row>

					<row weight="1">
						<button color="#c12643" icon="rwd" ontap="skipbackward" />
						<button color="#c12643" icon="ff" ontap="skipforward" />
					</row>
				</grid>
			</tab>
		</tabs>
	</row>
</layout>